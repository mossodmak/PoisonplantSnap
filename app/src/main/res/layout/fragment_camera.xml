<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">

    <ImageView
        android:id="@+id/resultView"
        android:layout_width="224dp"
        android:layout_height="224dp"
        android:layout_below="@id/title_camera"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/title_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="PoisonplantSnap"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultView"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/btn_captureImage"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:text="Take a photo"
            android:textColor="@android:color/white"
            android:layout_marginHorizontal="10dp"
            android:padding="10dp"
            android:background="@drawable/gallery_folder"
            android:drawableTop="@drawable/ic_camera_alt_white_24dp" />

        <Button
            android:id="@+id/btn_gallery"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:text="Gallery"
            android:textColor="@android:color/white"
            android:layout_marginHorizontal="10dp"
            android:padding="10dp"
            android:background="@drawable/gallery_folder"
            android:drawableTop="@drawable/ic_folder_white_24dp"/>

    </LinearLayout>

</RelativeLayout>