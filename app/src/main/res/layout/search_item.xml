<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/fadewhite"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    android:outlineSpotShadowColor="@color/zerowhite"
    android:outlineAmbientShadowColor="@color/zerowhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/zerowhite">
        <ImageView
            android:id="@+id/rImageTv"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/loading"></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/zerowhite">
        <TextView
            android:id="@+id/rTitleTv"
            android:text="Title"
            android:textColor="@color/topic"
            android:textSize="20sp"
            android:fontFamily="@font/serithai"
            android:layout_gravity="center_vertical"
            android:background="@color/zerowhite"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

            <TextView
                android:id="@+id/sciname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/zerowhite"
                android:fontFamily="sans-serif"
                android:textStyle="italic"
                android:text="Sciname"
                android:textColor="@color/grey"
                android:textSize="16sp"></TextView>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>