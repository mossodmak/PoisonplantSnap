<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/show_result_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light">

    <TextView
        android:id="@+id/show_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Result Fragment"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/show_result_imageResult"
        android:layout_width="224dp"
        android:layout_height="224dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/show_result_title"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148"
        tools:srcCompat="@tools:sample/backgrounds/scenic[9]" />

    <LinearLayout
        android:id="@+id/show_result_layout1"
        android:layout_width="344dp"
        android:layout_height="87dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:layout_below="@+id/show_result_imageResult"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.598">

        <ImageView
            android:id="@+id/show_result_imv1"
            android:layout_width="43dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars[0]" />

        <Button
            android:id="@+id/show_result_btn1"
            android:layout_width="179dp"
            android:layout_height="86dp"
            android:layout_weight="1"
            android:text="Button" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/show_result_layout2"
        android:layout_width="344dp"
        android:layout_height="87dp"
        android:layout_below="@+id/show_result_layout1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.759">

        <ImageView
            android:id="@+id/show_result_imv2"
            android:layout_width="43dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars[1]" />

        <Button
            android:id="@+id/show_result_btn2"
            android:layout_width="179dp"
            android:layout_height="86dp"
            android:layout_weight="1"
            android:text="Button" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/show_result_layout3"
        android:layout_width="344dp"
        android:layout_height="87dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:layout_below="@+id/show_result_layout2"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.925">

        <ImageView
            android:id="@+id/show_result_imv3"
            android:layout_width="43dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars[2]" />

        <Button
            android:id="@+id/show_result_btn3"
            android:layout_width="179dp"
            android:layout_height="86dp"
            android:layout_weight="1"
            android:text="Button" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/show_result_layout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_result_layout3"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/show_result_btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="16dp"
            android:layout_marginRight="20dp" />

        <Button
            android:id="@+id/show_result_btn_discard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discard"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/show_result_btn_save" />

    </LinearLayout>

</RelativeLayout>